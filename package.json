{
  "name": "coin-operated-jrpg",
  "version": "2.0.0",
  "description": "COIN:OPERATED JRPG - A narrative-driven JRPG with procedurally generated pixel art",
  "main": "electron/main/index.js",
  "homepage": "./",
  "author": "Matthew P. Chapdelaine",
  "license": "MIT",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "electron-start": "electron .",
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-start\"",
    "build": "npm run react-build && electron-builder",
    "build-deb": "npm run react-build && electron-builder --linux deb",
    "test": "react-scripts test"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.loporian.coinjrpg",
    "productName": "COIN:OPERATED JRPG",
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Game",
      "icon": "assets/icon.png"
    },
    "deb": {
      "depends": [],
      "category": "games"
    }
  }
}
